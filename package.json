      "karma-chrome-launcher": "3.2.0",
      "karma-mocha": "2.0.1",
      "karma-mocha-reporter": "2.2.5",
      "karma-rollup-preprocessor": "7.0.8",
      "mocha": "10.8.2",
      "rollup": "4.25.0"
   },
   "keywords": [
      "draggable",
