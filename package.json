{
   "name": "draggable-elm",
   "description": "Makes elements draggable. Vanilla style.",
   "version": "0.0.8",
   "license": "MIT",
   "browser": "./dist/draggable.browser.js",
   "module": "./dist/draggable.esm.js",
   "author": "Taitu Lizenbaum <taitu.dev@gmail.com>",
   "homepage": "https://github.com/taitulism/draggable#readme",
   "repository": "github:taitulism/draggable",
   "files": [
      "dist"
   ],
   "scripts": {
      "dev": "rollup --config rollup.dev.config.mjs --watch",
      "build": "rollup --config rollup.prod.config.mjs",
      "test": "echo '\n*** Tests are broken ***\n'",
      "_test": "karma start karma.conf.js",
